<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textPulmonaryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_2C2C2C"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="@string/beneficiary_s_diet_chart_link"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_15sdp"
                    />



            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearDietDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/textPulmonaryTxt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_weight=".6"
                        android:layout_marginEnd="@dimen/_1sdp"
                        >

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textDateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/_2C2C2C"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/roboto_medium"
                            android:text="@string/date_form4"
                            android:visibility="visible"
                            />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_weight=".4"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        >


                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextDietDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            style="@style/PrimaryEditText"
                            android:hint="@string/date_form4"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:focusable="false"
                            app:layout_constraintTop_toBottomOf="@+id/textPulmonaryRadioGroup"
                            android:drawableEnd="@drawable/ic_calender"
                            android:drawableTint="@color/_272727"
                            android:layout_marginEnd="0dp"
                            />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>




            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textDiet_chart_mulyakanTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_2C2C2C"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearDietDate"
                    android:text="@string/diet_chart_mulyakan"
                    android:visibility="visible"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextDiet_chart_evaluation"
                    style="@style/PrimaryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="top"
                    android:hint="@string/diet_chart_mulyakan"
                    android:minHeight="@dimen/_80sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:singleLine="false"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@+id/textDiet_chart_mulyakanTxt"
                    android:maxLength="100"
                    />


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textSuggestionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_2C2C2C"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextDiet_chart_evaluation"
                    android:text="@string/suggestion"
                    android:visibility="visible"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextSuggestion"
                    style="@style/PrimaryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="top"
                    android:hint="@string/suggestion"
                    android:minHeight="@dimen/_80sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:singleLine="false"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@+id/textSuggestionTxt"
                    android:maxLength="100"
                    />



            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textService_providerTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_2C2C2C"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextSuggestion"
                    android:text="@string/service_provider"
                    android:visibility="visible"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextService_provider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    style="@style/PrimaryEditText"
                    android:hint="@string/service_provider"
                    android:text=""
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@+id/textService_providerTxt"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLength="10"
                    />


            <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextService_provider"
                    android:background="@color/_A5A5A5"
                    android:layout_marginVertical="@dimen/_20sdp"
                    >
            </View>






            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textHomeVisitTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_2C2C2C"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="@string/home_visit_follow_up"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_10sdp"
                    />




            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearHomeVisitDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/textHomeVisitTxt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_weight=".6"
                        android:layout_marginEnd="@dimen/_1sdp"
                        >

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textHomeDateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/_2C2C2C"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/roboto_medium"
                            android:text="@string/date_form4"
                            android:visibility="visible"
                            />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_weight=".4"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        >


                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextHomeDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            style="@style/PrimaryEditText"
                            android:hint="@string/date_form4"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:focusable="false"
                            app:layout_constraintTop_toBottomOf="@+id/textPulmonaryRadioGroup"
                            android:drawableEnd="@drawable/ic_calender"
                            android:drawableTint="@color/_272727"
                            android:layout_marginEnd="0dp"
                            />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>




            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/linearHomeVisitDate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_weight=".6"
                        android:layout_marginEnd="@dimen/_1sdp"
                        >

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textHeightTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/_2C2C2C"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="MissingConstraints"
                            app:fontFamily="@font/roboto_medium"
                            android:text="@string/weight"
                            android:visibility="visible"
                            />



                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_weight=".4"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        >

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextHeight"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            style="@style/PrimaryEditText"
                            android:hint="@string/weight"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:inputType="numberDecimal"
                            android:maxLength="5"
                            app:layout_constraintTop_toBottomOf="@+id/textPulmonaryRadioGroup"
                            android:drawableTint="@color/_272727"
                            android:layout_marginEnd="0dp"
                            />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textSignatureTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_2C2C2C"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:text="@string/signatureWithoutStar"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/linearHeight"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    />



            <RelativeLayout
                    android:id="@+id/linearSingnature"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textSignatureTxt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/bg_signature_pad"
                    >

                <com.github.gcacace.signaturepad.views.SignaturePad
                        android:id="@+id/signaturePad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_signature_pad"
                        android:saveEnabled="false"
                        app:penColor="@color/black" />

                <ImageView
                        android:id="@+id/ivSignature"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </RelativeLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/searchLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearSingnature">



                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btClear"
                        style="@style/PrimaryButtonYellow"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="@string/clear"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="@dimen/_4sdp"
                        app:rippleColor="@color/_868686"
                        app:strokeColor="@color/black" />


                <RelativeLayout
                        android:id="@+id/linearCompleteTry"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/textSignatureTxt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="visible"
                        android:layout_weight="1"
                        >

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btTryAgain"
                            style="@style/PrimaryButtonYellow"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="@string/try_again"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            app:backgroundTint="@color/_E2861d"
                            app:cornerRadius="@dimen/_4sdp"
                            app:rippleColor="@color/_868686"
                            android:visibility="gone"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btComplete"
                            style="@style/PrimaryButtonYellow"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="@string/complete"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            app:backgroundTint="@color/_E2861d"
                            app:cornerRadius="@dimen/_4sdp"
                            app:rippleColor="@color/_868686" />

                </RelativeLayout>



            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textCommentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_2C2C2C"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingConstraints"
                    app:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/searchLayout"
                    android:text="@string/comment"
                    android:visibility="visible"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextComment"
                    style="@style/PrimaryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="top"
                    android:hint="@string/comment"
                    android:minHeight="@dimen/_80sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:singleLine="false"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@+id/textCommentTxt"
                    android:maxLength="100"
                    />


</androidx.constraintlayout.widget.ConstraintLayout>